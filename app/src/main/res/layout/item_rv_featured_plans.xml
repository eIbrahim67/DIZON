<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <!-- Property Image Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemImagePropCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/itemImageProp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_v1"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Property Title -->
    <TextView
        android:id="@+id/itemTitleProp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Villa Villa at two double"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemImagePropCard"
        app:layout_constraintEnd_toStartOf="@id/itemPriceProp" />

    <!-- Property Price -->
    <TextView
        android:id="@+id/itemPriceProp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$123"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/itemTitleProp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Property Location -->
    <TextView
        android:id="@+id/itemLocationProp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="123, maade, Cairo, Egypt"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemTitleProp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
